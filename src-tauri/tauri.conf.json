{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sound Tile",
  "version": "0.1.0",
  "identifier": "com.sound-tile.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "https://localhost:1000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sound Tile",
        "width": 800,
        "height": 600,
        "maximized": true,
        "backgroundColor": "#000000",
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

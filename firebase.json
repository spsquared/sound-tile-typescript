{
    "hosting": {
        "site": "soundtile-dev",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src 'self'; worker-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://webcama1.watching-grass-grow.com/current.jpg;"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=43200"
                    }
                ]
            }
        ]
    }
}